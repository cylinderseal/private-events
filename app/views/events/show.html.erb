<div id="event-show">
  <div class="card mt-4">
    <div class="card-body p-0">
      <div class="container-fluid">
        
        <div class="row">
          <div class="col-md-8 p-0">
            <img class="card-img-top" 
                        src="https://via.placeholder.com/460x160?text=Event+Poster+Here" alt="Card image">
          </div>
          <div class="col-md-4 p-0">
            <div class="container-fluid mx-2 py-3">
              <div class="d-flex bd-highlight">
                <div class="p-2 w-100 bd-highlight">
                  <h4>NOV 13</h4>
                </div>
                <div class="p-2 flex-shrink-1 bd-highlight">
                  <div class="container-fluid">
                    <%= link_to image_tag("https://via.placeholder.com/70x70?text=Event+Poster+Here", 
                                                        class: "rounded-circle"), @event.creator %>
                    <%= link_to @event.creator.username, @event.creator %>
                  </div>
                </div>
              </div>
              <div class="ml-2"><h4><%= @event.title %></h4></div>
            </div>
          </div>
        </div><!-- row -->

        <div class="row border-top border-bottom p-2">
          <div class="col-sm-6 col-md-8">
            <div class="btn-group btn-group-toggle d-none d-sm-block" data-toggle="buttons">
              <label class="btn btn-secondary">
                <input type="radio" name="options" id="option1" autocomplete="off" checked><%= fa_icon "share" %>
              </label>
              <label class="btn btn-secondary">
                <input type="radio" name="options" id="option2" autocomplete="off"><%= fa_icon "bookmark" %>
              </label>
            </div>
          </div>
          <div class="col-sm-6 col-md-4">
            <button class="btn btn-secondary btn-block">Attend</button>
          </div>
        </div><!-- row -->
        
        <div class="row mt-3 mb-2">
          <div class="col-sm-6 col-md-8 p-0">
            <div class="container-fluid mx-2">
              <h6><%= fa_icon "star" %> Description</h6>
              <p class="ml-4"><%= @event.description %></p>
              <div class="d-none d-md-block d-lg-block">
                <h6><%= fa_icon "tag" %> Tags</h6>
                <span class="badge badge-pill badge-secondary">Secondary</span>
                <span class="badge badge-pill badge-secondary">Secondary</span>
                <span class="badge badge-pill badge-secondary">Secondary</span>
              </div>
            </div>
          </div>
          <div class="col-sm-6 col-md-4 p-0">
            <div class="container-fluid mx-2">
              <h6><%= fa_icon "calendar" %> Date & Time</h6>
              <p class="ml-4">Thursday 9 PM</p>
              <h6><%= fa_icon "map-marker" %> Location</h6>
              <p class="ml-4">Manila, Philippines</p>
              <div class="d-block d-sm-block d-md-none">
                <h6><%= fa_icon "tag" %> Tags</h6>
                <span class="badge badge-pill badge-secondary">Secondary</span>
                <span class="badge badge-pill badge-secondary">Secondary</span>
                <span class="badge badge-pill badge-secondary">Secondary</span>
              </div>
            </div>
          </div>
        </div><!-- row -->
      </div><!-- container -->
    </div><!-- card-body -->
  </div><!-- card -->
</div><!-- event-show -->