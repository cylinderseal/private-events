<div id="event-show">
  <div class="card mt-4">
    <div class="card-body p-0">
      <div class="container-fluid">
        
        <div class="row">
          <div class="col-md-8 p-0">
            <img class="card-img-top" src="https://via.placeholder.com/460x160?text=Event+Poster+Here" alt="Card image">
          </div>
          <div class="col-md-4 p-0">
            <div class="container-fluid mx-2 py-3">
              <h6>Nov 13</h6>
              <h6><%= @event.title %></h6>
              <small>by <%= link_to @event.creator.username, user_path(@event.creator) %></small>
            </div>
          </div>
        </div><!-- row -->

        <div class="row border-top border-bottom p-2">
          <div class="col-sm-6 col-md-8">
            <div class="btn-group btn-group-toggle d-none d-sm-block" data-toggle="buttons">
              <label class="btn btn-secondary">
                <input type="radio" name="options" id="option1" autocomplete="off" checked>Share
              </label>
              <label class="btn btn-secondary">
                <input type="radio" name="options" id="option2" autocomplete="off">Save
              </label>
            </div>
          </div>
          <div class="col-sm-6 col-md-4">
            <button class="btn btn-secondary btn-block">Attend</button>
          </div>
        </div><!-- row -->
        
        <div class="row mt-3 mb-2">
          <div class="col-sm-6 col-md-8 p-0">
            <div class="container-fluid mx-2">
              <h6>Description</h6>
              <p><%= @event.description %></p>
              <div class="d-none d-md-block d-lg-block">
                <h6>Tags</h6>
                <span class="badge badge-pill badge-secondary">Secondary</span>
                <span class="badge badge-pill badge-secondary">Secondary</span>
                <span class="badge badge-pill badge-secondary">Secondary</span>
              </div>
            </div>
          </div>
          <div class="col-sm-6 col-md-4 p-0">
            <div class="container-fluid mx-2">
              <h6>Date & Time</h6>
              <p>Thursday 9 PM</p>
              <h6>Location</h6>
              <p>Manila, Philippines</p>
              <div class="d-block d-sm-block d-md-none">
                <h6>Tags</h6>
                <span class="badge badge-pill badge-secondary">Secondary</span>
                <span class="badge badge-pill badge-secondary">Secondary</span>
                <span class="badge badge-pill badge-secondary">Secondary</span>
              </div>
            </div>
          </div>
        </div><!-- row -->
      </div><!-- container -->
    </div><!-- card-body -->
  </div><!-- card -->
</div><!-- event-show -->

