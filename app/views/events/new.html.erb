<h1>New Event</h1>

<%= form_for(@event) do |f| %>
  <div class="form-group">
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.text_area :tag_list %>
  </div>
  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>